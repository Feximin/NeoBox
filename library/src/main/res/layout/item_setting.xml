<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_fff_eee"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black_111"
        android:textSize="15sp"
        tools:text="清除缓存" />

    <ImageView
        android:id="@+id/img_right"
        style="@style/style_img_40dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:src="@mipmap/img_arrow_right" />

    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txt_title"
        android:layout_toLeftOf="@+id/img_right"
        android:layout_toRightOf="@+id/txt_title"
        android:layout_toStartOf="@+id/img_right"
        android:gravity="end"
        android:textColor="@color/black_999"
        android:textSize="15sp"
        tools:text="30M" />


</RelativeLayout>