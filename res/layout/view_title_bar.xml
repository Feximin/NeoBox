<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/but_title_bar_left"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/selector_but_bg"
        android:scaleType="centerInside"
        android:src="@drawable/img_but_back"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="68dp"
        android:layout_marginRight="68dp" >

        <TextView
            android:id="@+id/txt_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:shadowColor="@color/color_white"
            android:text="首页"
            android:textColor="@color/black_most"
            android:textSize="19sp" />

        <ProgressBar
            android:id="@+id/progress_title_bar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_title_bar"
            android:indeterminateDrawable="@drawable/style_progress_loading"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/but_title_bar_right"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="invisible" />

</RelativeLayout>