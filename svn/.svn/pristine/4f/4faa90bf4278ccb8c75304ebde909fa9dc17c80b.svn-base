<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <stroke android:width="1px" android:color="#00355E" />

            <corners android:radius="3dp" />

            <gradient android:angle="270" 
                android:endColor="#7DC6FF" 
                android:startColor="#73C1FD" />
        </shape>
    </item>   
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1px"
                android:color="#323239"/>
            <corners android:radius="3dp"/>
            <gradient android:startColor="#6A6A6F"
                android:endColor="#727277"
                android:angle="270"/>
        </shape>
    </item>   
    <item >
        <shape>
            <stroke android:width="1px"
                android:color="#323239"/>
            <corners android:radius="3dp"/>
            <gradient android:startColor="#74747C"
                android:endColor="#7A7A81"
                android:angle="270"/>
        </shape>
    </item>    

</selector>